<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="15dp"
    android:background="@color/colorDarkSecondaryLight"
    app:cardBackgroundColor="@color/colorDarkSecondaryLight"
    app:cardCornerRadius="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp">


        <TextView
            android:id="@+id/firstAttributeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorDarkSecondary"
            android:text="@string/repetitions"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/secondAttributeTextView"
            android:layout_width="51dp"
            android:layout_height="19dp"
            android:layout_marginStart="225dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorDarkSecondary"
            android:text="@string/weight"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="@id/firstAttributeTextView"
            app:layout_constraintStart_toStartOf="@id/firstAttributeTextView"
            app:layout_constraintTop_toTopOf="@id/firstAttributeTextView" />


        <TextView
            android:id="@+id/textViewSet"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:text="@string/leer"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/firstAttributeEditText"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:autofillHints="2"
            android:ems="10"
            android:hint="@string/leer"
            android:inputType="numberSigned"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorDarkSecondaryLight"
            app:layout_constraintStart_toEndOf="@+id/textViewSet"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/secondAttributeEditText"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:autofillHints="2"
            android:ems="10"
            android:hint="@string/leer"
            android:inputType="numberDecimal"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorDarkSecondaryLight"
            app:layout_constraintStart_toEndOf="@+id/firstAttributeEditText"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>